@using RazorViews.Models
@using static RazorViews.Models.Person;

@{
    string appTitle = "ASP.NET Core Demo APP";

    Person person = new Person()
    {
        Name = "Orrana Lhaynher",
        DateOfBirth = Convert.ToDateTime("1998-06-02"), //null
        PersonGender = Gender.Female
    };
}

<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <meta charset="UTF-8" />
        <title>Minha primeira página</title>
    </head>
    <body>
        <h1>Escrevendo algo aqui</h1>
        <h2>@appTitle</h2>
        <h3>Hello @person.Name</h3>
        @if(person.DateOfBirth != null){
            double age = Math.Round(((TimeSpan)(DateTime.Now - person.DateOfBirth)).TotalDays / 365.25);
            <h4>@age anos</h4>
        }
        else
        {
            <h4>Data de nascimento inválida</h4>
        }
        <form> 
            <label>Nome</label>
            <input type="text" /> <br>
            <label>Email</label>
            <input type="email" /> <br>
            <label>Password</label>
            <input type="password" /> <br>
            <label>Confirm Password</label>
            <input type="password" /> <br>
        </form>
        @switch (person.PersonGender)
        {
            case Gender.Male:
                <h4>Gênero masculino</h4>
                break;
            case Gender.Female:
                <h4>Gênero feminino</h4>
                break;
            case Gender.Other:
                <h4>Outro</h4>
                break;
            default:
                <h4>Opção inválida</h4>
                break;
                
        }
    </body>
</html>